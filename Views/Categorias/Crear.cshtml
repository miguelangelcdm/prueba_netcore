@model Categoria
@{
    ViewData["Title"]="Crear Categoria";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form method="post" asp-action="Crear">
    <div class="border-bottom p-3">
        <div class="form-group row">
            <h2 class="text-info p-lg-3">Nueva Categoria</h2>
        </div>
        <DIV class="container">
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="Nombre" class="form-label">Nombre Categoria</label>
                    <input asp-for="Nombre" class="form-control">
                </div>
            </div>
        </DIV>
        <br>
        <div class="d-grid gap-2 d-md-block">
            <button type="submit" class="btn btn-primary">Crear nueva</button>
            <a asp-controller="Categoria" asp-action="Index" class="btn btn-success">Regresar</a>
        </div>
    </div>
</form>