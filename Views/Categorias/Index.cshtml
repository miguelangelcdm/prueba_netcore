@model IEnumerable<Categoria>
@{
    ViewData["Title"] = "Lista de Categorias";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-4">
        <h3>Lista de categorias</h3>
    </div>
    <div class="col-3">
        <a asp-action="Crear" class="btn btn-primary form-control">Crear Categoria</a>
    </div>
    <div>
        @if (Model.Count() > 0)
        {
            <table class="d-lg-table table-striped border">
                <tr>
                    <ht>Nombre de Categoria</ht>
                    <th></th>
                </tr>
                @foreach (var cat in Model)
                {
                    <tr>
                        <td>@cat.Nombre</td>
                        <td>
                            <a asp-action="Editar" class="btn btn-primary text-white" asp-all-route-id="@cat.Categoria_Id">Editar</a>
                            <a asp-action="Borrar" class="btn btn-danger text-white" asp-route-id="@cat.Categoria_Id">Borrar</a>
                        </td>
                    </tr>
                }
            </table>
        }else{
            <p>No hay categorias registradas</p>
        }
    </div>
</div>